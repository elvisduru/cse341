<%- include('../../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  </head>

  <body>
    <%- include('../../includes/nav.ejs') %>
      <main class="container">
        <h2 class="my-5">
          <%= editing ? "Edit Product" : "Add New Product" %>
        </h2>
        <form style="max-width: 400px; padding-bottom: 2rem;"
          action="<%= editing ? `/project1/admin/products/${product._id}?_method=PUT` : '/project1/admin/products' %>"
          method="POST">
          <div class="form-control">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" value="<%= editing ? product.name : '' %>">
          </div>
          <div class="form-control">
            <label for="imageUrl">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : '' %>">
          </div>
          <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : '' %>">
          </div>
          <div class="form-control">
            <label for="description">description</label>
            <textarea name="description" id="description" rows="5"><%= editing ? product.description : '' %></textarea>
          </div>
          <div class="form-control">
            <label for="tags">Tags</label>
            <input type="text" name="tags" id="tags" placeholder="e.g. Tag1, Tag2, etc"
              value="<%= editing ? product.tags : '' %>">
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button class="btn btn-success mt-4" type="submit">
            <%= editing ? 'Update' : 'Add' %> Product
          </button>
          <% if (editing) { %>
            <a href="/project1/admin/products" class="btn btn-secondary mt-4 ms-4">Cancel</a>
            <% } %>
        </form>
      </main>
      <%- include('../../includes/end.ejs') %>